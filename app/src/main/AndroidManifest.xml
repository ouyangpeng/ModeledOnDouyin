<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.csdn.oyp.douyin">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/header_icon_2"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/header_icon_2"
        android:supportsRtl="true"
        android:theme="@style/main_theme">

        <!-- android 全面屏 -->
        <meta-data
            android:name="android.max_aspect"
            android:value="2.1" />

        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/main_theme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".RecyclerViewShowActivity" />

        <activity android:name=".ViewPagerShowActivity" />

    </application>

</manifest>